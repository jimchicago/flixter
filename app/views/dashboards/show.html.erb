<br />

<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>My Dashboard</h1>
  <br />
  <h2>Courses I'm Enrolled in:</h2>
  <br />
  <% current_user.enrolled_courses.each do |c| %>
    <h3><%= link_to c.title, course_path(c) %></h3>
    <%= image_tag c.image, class: 'img-responsive dashimage' %>
    <div class="col-xs-12 col-sm-2 float-r">
      <%= link_to "More Info", course_path(c), class: 'btn btn-med btn-primary pull-right' %>
    </div>
    <h5><%= c.description %></h5>
  <br />
  <hr /> <!-- Note: this is an hr tag, NOT a br -->
  <br />
  <% end %>
  <h2>Courses I'm Teaching:</h2>
  <br />
  <% current_user.courses.each do |c| %>
    <h3 class="col-xs-8 vert-space"><%= link_to c.title, course_path(c) %></h3>
    <div class="col-xs-4">
      <%= link_to "More Info", course_path(c), class: 'btn btn-med btn-primary pull-right' %>
    </div>
  <% end %>
</div>
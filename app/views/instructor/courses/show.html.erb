<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center"><%= @course.title %></h1>
  <%= link_to 'Preview as Student', course_path(@course), class: 'btn btn-warning pull-right' %>
  <br class="clr" />

  <div class="text-center">
    <%= link_to 'Add a New Section to this Course', new_instructor_course_section_path(@course), class: 'btn btn-primary btn-med' %>
  <br class="clr" />
  </div>
  <br class="clr" />
  <ul>
    <% @course.sections.each do |section| %>
      <h4><li>
        <%= section.title %>
        <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'pull-right btn btn-primary btn-sm' %>
        <ul>
          <% section.lessons.each do |lesson| %>
            <li>
             <h5><b><%= lesson.title %></b></h5>
             <h6><%= lesson.subtitle %></h6>
             <br />
            </li>
          <% end %>
          <br />
          <br />
        </ul>
        <br class="clr" />
      </li></h4>
    <% end %>
  </ul>

</div>
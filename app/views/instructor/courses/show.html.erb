<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center"><%= @course.title %></h1>
  <%= link_to 'Preview as Student', course_path(@course), class: 'btn btn-warning pull-right' %>
  <br class="clr" />

  <div class="text-center">
    <%= link_to 'Add a new section', new_instructor_course_section_path(@course), class: 'btn btn-primary btn-med' %>
  <br class="clr" />
  </div>
  <br class="clr" />
  <ul>
    <% @course.sections.each do |section| %>
      <h4><li>
        <%= section.title %>
      </li></h4>
    <% end %>
  </ul>

</div>
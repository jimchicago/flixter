<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="formhead">Add a new course</h1>
  <%= simple_form_for @course, url: instructor_courses_path do |f| %>
    <%= f.input :title %>
    <br />
    <%= f.input :description %>
    <br />
    <%= f.input :cost %>
    <br />
    <%= f.input :image %><br />
  <!-- <button type="button" class="btn btn-default" data-dismiss="modal">Close</button> -->
  <%= f.submit "Upload the Selected Photo", class: 'btn btn-primary' %>
  <%= f.submit "Create", class: 'btn btn-primary pull-right' %>
    <br />
  <% end %>
  <br />
</div>
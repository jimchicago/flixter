<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Add a new <b>lesson</b> to this course:</h1>
  <h3><i><%= simple_form_for @lesson, url: instructor_section_lessons_path(current_section) do |f| %></i></h3>
  <br />
  <%= simple_form_for @lesson, url: instructor_section_lessons_path(@section) do |f| %>
    <%= f.input :title %>
    <br />
    <%= f.input :subtitle %>
    <br />
    <%= f.submit "Create Title & Subtitle", class: 'btn btn-primary' %>
    <br />
  <% end %> 
</div>